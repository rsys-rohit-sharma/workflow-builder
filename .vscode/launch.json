{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Workflow Builder Service",

            "cwd": "${workspaceFolder}/services/wfb-api-service",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
            "sourceMaps": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "smartStep": true,
            "restart": true,
            "args": ["${workspaceFolder}/services/wfb-api-service/src/main.ts"],
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}
