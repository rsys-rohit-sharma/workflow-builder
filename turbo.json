{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {},
    "test:cov": {},
    "test:local": {
      "outputs": []
    },
    "lint": {},
    "lint:fix": {},
    "type-check": {},
    "dev": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "migrate:up": {},
    "migrate:down": {},
    "migrate:create": {}
  }
}
