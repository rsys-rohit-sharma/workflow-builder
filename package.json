{
  "name": "workflow-builder-backend",
  "private": true,
  "version": "1.0.0",
  "description": "Workflow builder backend repo with all workflow api and consumer micro services",
  "packageManager": "pnpm@9.12.1",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "prepare": "if [ ${HUSKY:-1} -ne 0 ]; then npx husky install; fi;",
    "build": "turbo run build",
    "clean": "git clean -xdf node_modules",
    "clean:build": "pnpm -r exec rm -rf dist out .turbo coverage .scannerwork tsconfig.build.tsbuildinfo",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:cov": "turbo run test:cov",
    "test:debug": "turbo run test:debug",
    "test:e2e": "turbo run test:e2e",
    "test:local": "turbo run test:local",
    "migrate:up": "turbo run migrate:up --filter=wfb-api-service",
    "migrate:down": "turbo run migrate:down --filter=wfb-api-service --",
    "migrate:create": "turbo run migrate:create --filter=wfb-api-service --",
    "pre-commit": "lint-staged",
    "pre-push": "turbo run build --force"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.675.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/mongoose": "^10.0.10",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/terminus": "^10.2.3",
    "@simpplr/backend-commons": "^1.7.0",
    "@simpplr/common-logger": "^2.9.4",
    "@simpplr/common-message-broker": "^3.9.0",
    "@simpplr/ff-node-server-sdk": "^1.3.0",
    "@simpplr/secrets-manager": "^3.1.11",
    "@simpplr/tracing": "^1.13.3",
    "@sinclair/typebox": "^0.33.17",
    "async-retry": "^1.3.3",
    "axios": "^1.7.7",
    "bson": "^6.9.0",
    "cors": "^2.8.5",
    "cross-var": "^1.1.0",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.1",
    "ioredis": "^5.4.1",
    "kafkajs": "^2.2.4",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "cls-hooked": "^4.2.2",
    "moment-timezone": "^0.5.45",
    "mongo-migrate-ts": "^1.6.2",
    "mongodb": "^6.9.0",
    "mongoose": "^8.7.0",
    "opossum": "^8.1.4",
    "reflect-metadata": "^0.2.0",
    "response-time": "^2.3.2",
    "rxjs": "^7.8.1",
    "server-timing": "^3.3.3",
    "tsconfig-paths": "^4.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/testing": "^10.0.0",
    "@roarr/cli": "^5.12.4",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.4",
    "@types/node": "^20.3.1",
    "@types/response-time": "^2.3.8",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "axios-mock-adapter": "^1.22.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.7",
    "lint-staged": "^15.2.10",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.2",
    "rollup": "4.22.4",
    "rollup-plugin-delete": "2.0.0",
    "rollup-plugin-dts": "6.1.0",
    "rollup-plugin-esbuild": "6.1.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "turbo": "latest",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "services/**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "packages/**/*.{js,ts}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,ts,css,md}": "prettier --write --no-config"
  }
}
